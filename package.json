{
	"name": "@labdigital/apollo-gateway-packages",
	"private": "true",
	"version": "0.0.0",
	"description": "Various packages for Apollo Gateway",
	"type": "module",
	"keywords": [
		"graphql",
		"authentication"
	],
	"author": "Lab Digital <opensource@labdigital.nl>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/labd/apollo-gateway-packages"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "pnpm turbo build",
		"format": "biome format --fix",
		"lint": "biome check",
		"publish:ci": "pnpm build && pnpm changeset publish",
		"publish:version": "pnpm changeset version && pnpm format",
		"test": "vitest run",
		"test:ci": "vitest run --coverage"
	},
	"packageManager": "pnpm@10.8.0",
	"devDependencies": {
		"@changesets/cli": "^2.27.9",
		"@vitest/coverage-v8": "3.1.1",
		"vitest": "3.1.1"
	},
	"dependencies": {
		"@biomejs/biome": "^1.9.4",
		"turbo": "^2.5.0"
	}
}
